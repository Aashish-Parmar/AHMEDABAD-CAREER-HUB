{
  "info": {
    "name": "Ahmedabad Career Hub - Student Role API",
    "description": "Complete API collection for Student role functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "jobId",
      "value": "",
      "type": "string"
    },
    {
      "key": "companyId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    pm.collectionVariables.set('userId', jsonData.userId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.student@example.com\",\n  \"password\": \"Student123\",\n  \"role\": \"student\",\n  \"college\": \"Ahmedabad University\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new student account. Password must be at least 8 characters with uppercase, lowercase, and number."
          }
        },
        {
          "name": "Login Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    pm.collectionVariables.set('userId', jsonData.userId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.student@example.com\",\n  \"password\": \"Student123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/jobs?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["jobs"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "type",
                  "value": "internship",
                  "description": "Filter by job type (internship/full-time)",
                  "disabled": true
                },
                {
                  "key": "title",
                  "value": "developer",
                  "description": "Search by job title",
                  "disabled": true
                },
                {
                  "key": "tech",
                  "value": "React,Node.js",
                  "description": "Filter by tech stack (comma-separated)",
                  "disabled": true
                }
              ]
            },
            "description": "Get all jobs with pagination. Supports filtering by type, title, and tech stack."
          }
        },
        {
          "name": "Get Job by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('jobId', jsonData._id);",
                  "    pm.collectionVariables.set('companyId', jsonData.company);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/jobs/:id",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{jobId}}",
                  "description": "Job ID"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Apply to Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"job\": \"{{jobId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/applications",
              "host": ["{{baseUrl}}"],
              "path": ["applications"]
            },
            "description": "Student applies to a job. Requires authentication. Prevents duplicate applications."
          }
        },
        {
          "name": "Get My Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/applications/mine?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["applications", "mine"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                }
              ]
            },
            "description": "Get all applications for the logged-in student. Returns paginated results with job and company details."
          }
        }
      ]
    },
    {
      "name": "Companies",
      "item": [
        {
          "name": "Get All Companies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/companies?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["companies"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "search",
                  "value": "tech",
                  "description": "Search by company name",
                  "disabled": true
                }
              ]
            },
            "description": "Get all companies with pagination. Supports search by company name."
          }
        },
        {
          "name": "Get Company by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('companyId', jsonData._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/companies/:id",
              "host": ["{{baseUrl}}"],
              "path": ["companies", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{companyId}}",
                  "description": "Company ID"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Interviews",
      "item": [
        {
          "name": "Submit Interview Experience",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company\": \"{{companyId}}\",\n  \"interviewDate\": \"2024-01-15\",\n  \"rounds\": [\n    {\n      \"roundType\": \"Technical Round\",\n      \"questionsAsked\": [\"What is React?\", \"Explain useState hook\", \"What is virtual DOM?\"],\n      \"difficultyRating\": 4\n    },\n    {\n      \"roundType\": \"HR Round\",\n      \"questionsAsked\": [\"Tell me about yourself\", \"Why do you want to join?\"],\n      \"difficultyRating\": 2\n    }\n  ],\n  \"overallRating\": 4,\n  \"isAnonymous\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/interviews",
              "host": ["{{baseUrl}}"],
              "path": ["interviews"]
            },
            "description": "Student submits an interview experience. Only students can submit. Requires authentication."
          }
        },
        {
          "name": "Get Company Interviews",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/interviews/company/:companyId",
              "host": ["{{baseUrl}}"],
              "path": ["interviews", "company", ":companyId"],
              "variable": [
                {
                  "key": "companyId",
                  "value": "{{companyId}}",
                  "description": "Company ID"
                }
              ]
            },
            "description": "Get all interview experiences for a specific company. Only students can view. Requires authentication."
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            },
            "description": "Get the logged-in user's profile. Returns user info with populated company if recruiter."
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"college\": \"Ahmedabad University - Updated\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            },
            "description": "Update profile. Students can update name and college. Recruiters can only update name."
          }
        },
        {
          "name": "Upload Avatar",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "avatar",
                  "type": "file",
                  "src": [],
                  "description": "Image file (JPEG, PNG, GIF, WebP). Max 5MB."
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/users/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["users", "avatar"]
            },
            "description": "Upload avatar image. Supported formats: JPEG, PNG, GIF, WebP. Max size: 5MB. Requires authentication."
          }
        }
      ]
    }
  ]
}

