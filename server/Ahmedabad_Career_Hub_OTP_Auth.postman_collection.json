            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"{{email}}\",\n  \"password\": \"SecurePass123\",\n  \"role\": \"recruiter\",\n  \"companyName\": \"Tech Solutions Inc\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new recruiter account. After registration, check your email for OTP."
          },
          "response": []
        },
        {
          "name": "3. Verify Email",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Email verified successfully\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.message).to.include(\"Email verified\");",
                  "    pm.expect(jsonData.isEmailVerified).to.eql(true);",
                  "    pm.expect(jsonData.token).to.exist;",
                  "});",
                  "",
                  "// Save token for authenticated requests",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"authToken\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"otp\": \"{{otp}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-email",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-email"]
            },
            "description": "Verify email with OTP received in email. Update the 'otp' variable with the 6-digit code from your email."
          },
          "response": []
        }
      ],
      "description": "Complete registration flow: Register → Check Email → Verify OTP"
    },
    {
      "name": "Login Flow",
      "item": [
        {
          "name": "4. Login (After Verification)",
          "event": [
            {
              "listen": "test",
              "script": {
